	default = simple

[commit]
	template = ~/.config/git/commit-template.txt

[alias]
	untrack = update-index --assume-unchanged
	track = update-index --no-assume-unchanged
	download = clone --depth=1

[init]
	defaultBranch = main

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = cyan

[color "status"]
	added = green
	changed = yellow
	untracked = red

