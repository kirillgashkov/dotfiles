{
  // Font
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.lineHeight": 1.7,

  // Color scheme
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "workbench.preferredLightColorTheme": "Default Light Modern",

  // Spell check
  "cSpell.enabled": false,
  "cSpell.language": "en,ru",

  // Proxy
  "http.proxy": "http://127.0.0.1:1081",

  // Auto save
  "files.autoSave": "onFocusChange",

  // Go
  "go.lintTool": "golangci-lint",
  "go.testFlags": ["-count=1"],
  "gopls": {
    // See https://github.com/golang/vscode-go/wiki/features#syntax-highlighting.
    "ui.semanticTokens": true,
    // See https://github.com/golang/vscode-go/wiki/features#organizing-imports.
    "formatting.local": "github.com/k11v",
    // See https://github.com/golang/vscode-go/wiki/features#custom-formatter.
    "fomatting.gofumpt": true,
  },
  "[go]": {
    "editor.rulers": [80, 120],
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always",
    },
  },
  "files.associations": {
    "*.html.tmpl": "html",
  },

  // Web
  "[html]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Typst
  "tinymist.formatterMode": "typstyle",
  "[typst]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.defaultFormatter": "myriad-dreamin.tinymist",
    "editor.formatOnSave": true
  },

  // PlantUML
  "plantuml.server": "http://localhost:1000",
  "plantuml.render": "PlantUMLServer",
  "[plantuml]": {
      "editor.bracketPairColorization.enabled": false,
  },

  // Other
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.find.seedSearchStringFromSelection": "never",
  "editor.unicodeHighlight.allowedLocales": { "en": true, "ru": true },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.simpleDialog.enable": true,
  "window.dialogStyle": "custom",
  "workbench.editor.empty.hint": "hidden",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "telemetry.telemetryLevel": "off",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "jupyter.askForKernelRestart": false,
  "go.toolsManagement.autoUpdate": true,
}
