    name = Kirill Gashkov
    email = gashkov.k.e@gmail.com

[core]
    editor = vim
    pager = diff-so-fancy | less

[push]
    default = simple

[alias]
    untrack = update-index --assume-unchanged
    track = update-index --no-assume-unchanged

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = cyan

[color "status"]
    added = green
    changed = yellow
    untracked = red

[color "diff"]
    meta = 11
    frag = magenta bold
    func = 146 bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
