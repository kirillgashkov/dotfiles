# ---------------------------------------------------------------------------- #
# Directories
# ---------------------------------------------------------------------------- #


# `repo` will search this directory for repositories
export REPOSITORIES="$HOME/Repositories"


# ---------------------------------------------------------------------------- #
# Session defaults
# ---------------------------------------------------------------------------- #


# terminal
export TERM='xterm-256color'

# programs
export EDITOR='micro'
export PAGER='less'
export VISUAL='micro'
export BROWSER='open'

# locale
export LANG='en_US.UTF-8'
export LANGUAGE='en_US:en_GB:en'
export LC_TIME='en_GB.UTF-8'
