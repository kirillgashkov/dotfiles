# Enable aliases to be sudo'ed
alias sudo="sudo "


#
# Built-in
#


# ls
alias l='ls -1A'
alias ll='ls -lh'
alias la='ls -lhA'

# clear
alias cl='clear'

# mkdir
alias md='mkdir'


#
# External
#


# git
alias ga='git add'
alias gr='git reset HEAD'
alias gc='git commit'
alias gca='git commit --amend'
alias gch='git checkout'
alias gf='git fetch'
alias gu='git pull'
alias gp='git push'
alias gb='git branch'
alias gl='git log --graph'
alias gs='git status -sb'
alias gd='git diff'
